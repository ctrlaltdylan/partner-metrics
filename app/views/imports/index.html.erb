<%= polaris_page(
  title: t(".title"),
  subtitle: t(".subtitle")
) do |page| %>

  <% page.with_primary_action(url: new_import_path) { "New import" } %>

  <%= turbo_frame_tag :imports, target: "_top" do %>

  <% end %>

  <%= polaris_page_actions do |actions| %>
    <% actions.with_secondary_action(
      destructive: true,
      outline: true,
      url: metrics_path,
      data: {turbo_method: :delete,turbo_confirm: "Are you sure? This removes all payments and metrics."},
    ) { "Reset all data" } %>
  <% end %>
<% end %>
