<%= turbo_stream_from [current_user, :imports] %>

<%= polaris_page(
  narrow_width: true,
  title: t(".title"),
  id: dom_id(@import),
  back_url: imports_path,
) do |page| %>

  <% page.with_title_metadata do %>
    <%= render "status", import: @import %>
  <% end %>

  <%= render @import %>

  <%= polaris_page_actions do |actions| %>
    <% actions.with_secondary_action(
      destructive: true,
      outline: true,
      url: @import,
      data: {turbo_method: :delete},
    ) { "Delete" } %>
  <% end %>

<% end %>
