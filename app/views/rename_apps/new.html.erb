<%= polaris_page(
  narrow_width: true,
  title: t("rename_apps.rename"),
  subtitle: t("rename_apps.subtitle"),
  back_url: request.referer
) do |page| %>

  <%= polaris_card do %>
    <%= turbo_frame_tag :rename_apps, target: "_top" do %>
      <%= form_for(:rename_app, url: rename_apps_path, builder: Polaris::FormBuilder) do |form| %>
        <%= polaris_form_layout do |form_layout| %>

          <% form_layout.with_item do %>
            <%= form.polaris_select(:from,
              label: t("rename_apps.from"),
              options: @app_titles.map { |app_title| [app_title, app_title] },
              selected: nil
            ) %>
          <% end %>

          <% form_layout.with_item do %>
            <%= form.polaris_select(:to,
              label: t("rename_apps.to"),
              options: @app_titles.map { |app_title| [app_title, app_title] },
              selected: nil
            ) %>
            <% end %>

          <% form_layout.with_item do %>
            <%= polaris_button(
              submit: true,
              primary: true,
              data: {form_target: "submitButton"},
            ) { t('rename_apps.rename') } %>
          <% end %>

        <% end %>
      <% end %>
    <% end %>
  <% end %>

<% end %>
